{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": "off",
        "no-multi-assign": "off",
        "import/extensions": "off",
        "no-plusplus": "off",
        "no-param-reassign": "off",
        "no-continue": "off",
        "no-labels": "off"
    }
}